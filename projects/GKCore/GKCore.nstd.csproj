<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<TargetFrameworks>netstandard2.0;net461</TargetFrameworks>
		<AssemblyName>GKCore</AssemblyName>
		<RootNamespace />
		<Company />
		<Product>GEDKeeper</Product>
		<Copyright>Copyright Â© 2014-2017 Sergey V. Zhdanovskih</Copyright>
		<AssemblyVersion>3.0.0.0</AssemblyVersion>
	</PropertyGroup>
	<ItemGroup Condition="'$(TargetFramework)' == 'net461'">
		<Reference Include="System.Runtime.Remoting" />
		<Reference Include="DotNetRtfWriter">
			<HintPath>libs\DotNetRtfWriter.dll</HintPath>
		</Reference>
		<Reference Include="ExcelLibrary">
			<HintPath>libs\ExcelLibrary.dll</HintPath>
		</Reference>
		<Reference Include="itextsharp">
			<HintPath>libs\itextsharp.dll</HintPath>
		</Reference>
	</ItemGroup>

	<ItemGroup Condition="'$(TargetFramework)' == 'netstandard2.0'">
		<Reference Include="BSLib.netstd">
			<HintPath>..\libs\netstd\BSLib.netstd.dll</HintPath>
		</Reference>
		<Reference Include="BSLib.SmartGraph.netstd">
			<HintPath>..\libs\netstd\BSLib.SmartGraph.netstd.dll</HintPath>
		</Reference>
	</ItemGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <DefineConstants>TRACE;DEBUG;NETSTANDARD;NETSTANDARD2_0</DefineConstants>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <DefineConstants>TRACE;RELEASE;NETSTANDARD;NETSTANDARD2_0</DefineConstants>
  </PropertyGroup>
</Project>
